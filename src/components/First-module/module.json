{
  "name": "hello/first-module",
  "d4Shortcode": "",
  "title": "First module",
  "titles": "First modules",
  "category": "module",

  "attributes": {
    "module": {
      "type": "object",
      "selector": "{{selector}}",
      "default": {
        "meta": {
          "adminLabel": {
            "desktop": {
              "value": "First module"
            }
          }
        },
        "advanced": {
          "text": {
            "text": {
              "desktop": {
                "value": {
                  "color": "light"
                }
              }
            }
          }
        }
      },

      "defaultPrintedStyle": {
        "decoration": {
          "background": {
            "desktop": {
              "value": {
                "color": "#ecf4f7"
              }
            }
          }
        }
      },

      "styleProps": {
        "border": {
          "importent": true
        }
      }
    },

    "image": {
      "type": "object",
      "selector": "{{selector}} .first_module__image img",
      "styleProps": {
        "border": {
          "importent": true
        }
      }
    },
    "content":{
      "type": "object",
      "selector" : "{{selector}} .first_module_content"
    },

    "title": {
      "type": "object",
      "selector": "{{selector}} .first_module__title",

      "default": {
        "decoration": {
          "font": {
            "font": {
              "desktop": {
                "value": {
                  "headingLevel": "h2"
                }
              }
            }
          }
        }
      },

      "defaultPrintedStyle": {
        "decoration": {
          "font": {
            "font": {
              "desktop": {
                "value": {
                  "size": "22px",
                  "lineHeight": "1em",
                  "weghth": "700"
                }
              }
            }
          }
        }
      },
      "styleProps": {
        "font": {
          "important": {
            "font": {
              "desktop": {
                "value": {
                  "color": true
                }
              }
            }
          }
        }
      },
      "tagName": "h1",
      "attributes": {
        "class": "first_module__title"
      },
      "inlineEditor": "plainText",
      "elementType": "heading",
      "childrenSanitizer": "et_core_esc_previously"
    }
  },

  "customCssFields": {
    "contentContainer": {
      "subName": "contentContainer",
      "selectorSuffix": " .first_module__content-container"
    },
    "title": {
      "subName": "title",
      "selectorSuffix": " .first_module__title"
    },
    "image": {
      "subName": "image",
      "selectorSuffix": " .first_module__image img"
    },
    "content": {
      "subName": "content",
      "selectorSuffix": " .first_module__content"
    }
  }
}
